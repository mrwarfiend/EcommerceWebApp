@model EcommerceProject.Models.Cart

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Cart</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div>
                <h4>Cart</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.userId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.userId)
                        @Html.HiddenFor(e=>e.userId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.prod)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.prod.name)
                        @Html.HiddenFor(e=>e.prod.name)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.subtotal)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.subtotal)
                        @Html.HiddenFor(e=>e.subtotal)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.tax)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tax)
                        @Html.HiddenFor(e=>e.tax)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.total)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.total)
                        @Html.HiddenFor(e=>e.total)
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <label asp-for="count" class="control-label"></label>
                <input asp-for="count" class="form-control" />
                <span asp-validation-for="count" class="text-danger"></span>
                @Html.HiddenFor(e=>e.timeStamp)
                @Html.HiddenFor(e=>e.id)
                @Html.HiddenFor(e=>e.prod)
                @Html.HiddenFor(e=>e.prodId)
                @Html.HiddenFor(e=>e.prod.desc)
                @Html.HiddenFor(e=>e.prod.img)
                @Html.HiddenFor(e=>e.prod.categ)
                @Html.HiddenFor(e=>e.prod.categId)
                @Html.HiddenFor(e=>e.prod.count)
                @Html.HiddenFor(e=>e.prod.id)
                @Html.HiddenFor(e=>e.prod.price)
                @Html.HiddenFor(e=>e.prod.tax)
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
